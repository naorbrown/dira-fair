{
  "version": "0.0.1",
  "configurations": [
    {
      "name": "web",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "dev"],
      "port": 3000,
      "cwd": "apps/web"
    },
    {
      "name": "api",
      "runtimeExecutable": "bash",
      "runtimeArgs": ["-c", "source .venv/bin/activate && uvicorn api.main:app --reload --port 8000"],
      "port": 8000,
      "cwd": "apps/api"
    }
  ]
}
